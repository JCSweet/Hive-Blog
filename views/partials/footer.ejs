<script>
// Edit / Update a blog post 
let editHidden = true;
  $( ".toggleEditBtn" ).on( "click", function() {
    const id = $(this).attr("id");
    if (editHidden) {
        // Show update form
        $("#editForm-" + id).removeClass("hideToggleEdit");
        editHidden = false;
        $("#" + id).html("Cancel");
        $("#" + id).removeClass("primaryBtn");
        $("#" + id).addClass("secondaryBtn");
    } else if (!editHidden) {
        // Hide update form
        $("#editForm-" + id).addClass("hideToggleEdit");
        editHidden = true;
        $("#" + id).html('<i class="fa-regular fa-pen-to-square fa-lg"></i>');
        $("#" + id).addClass("primaryBtn");
        $("#" + id).removeClass("secondaryBtn");
    }
  });

  // Comment on a blog post 
let commentHidden = true;
  $( ".toggleCommentBtn" ).on( "click", function() {
    const id = $(this).attr("id");
    if (commentHidden) {
        // Show comment form
        $("#commentForm-" + id).removeClass("hideToggleEdit");
        commentHidden = false;
        $("#" + id).html("Cancel");
        $("#" + id).removeClass("primaryBtn");
        $("#" + id).addClass("secondaryBtn");
    } else if (!commentHidden) {
        // Hide comment form
        $("#commentForm-" + id).addClass("hideToggleEdit");
        commentHidden = true;
        $("#" + id).html('<i class="fa-regular fa-comment fa-lg"></i>');
        $("#" + id).addClass("primaryBtn");
        $("#" + id).removeClass("secondaryBtn");
    }
  });


</script>
